<Window x:Class="ChordGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChordGenerator"
        mc:Ignorable="d"
        Title="Chord Generator" Height="450" Width="800" FontFamily="Roboto" FontSize="18">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="1" Grid.Row="1" FontSize="36"  Text="Chord Generator" Grid.ColumnSpan="3" Margin="10"/>

        <TextBlock Grid.Column="1" Grid.Row="2" FontSize="24"  Text="Enter chord"/>

        <TextBox x:Name="NameOfChord" Grid.Column="2" Grid.Row="2" Width="120"/>

        <Button x:Name="GenerateButton" Content="Generate!" Grid.Column="1" Grid.Row="3" Margin="0,10,0,0" Grid.ColumnSpan="2" Click="GenerateButton_Click"/>

        <Button x:Name="LearnChordsButton" Content="Learn Chords" Grid.Column="4" Grid.Row="2" Click="LearnChordsButton_Click"/>



    </Grid>
</Window>
